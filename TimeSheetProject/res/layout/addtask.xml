<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@android:id/list"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout="@layout/addtask" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView android:id="@+id/TextLabel" android:text="@string/taskedit"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />

	<EditText android:id="@+id/EditTask" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@+id/TextLabel" android:inputType="text" />

	<Button android:id="@+id/ChangeTask" android:text="@string/accept"
		android:width="150dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="left"
		android:layout_below="@+id/EditTask" android:layout_marginLeft="7dip" />

	<Button android:id="@+id/CancelEdit" android:text="@string/cancel"
		android:width="150dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="right"
		android:layout_below="@+id/EditTask" android:layout_toRightOf="@+id/ChangeTask"
		android:layout_marginRight="7dip" />
</RelativeLayout>
