<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout="@layout/changedate" android:id="@+id/FrameLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#80000000">

	<TextView android:id="@+id/DateText" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:textSize="18sp" android:layout_centerHorizontal="true"
		android:layout_marginBottom="5dip" />

	<DatePicker android:id="@+id/DatePicker01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_centerHorizontal="true" android:layout_marginBottom="0dip"
		android:layout_below="@+id/DateText" />

	<Button android:id="@+id/changeok" android:text="@string/accept"
		android:width="150dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="left"
		android:layout_marginLeft="7dip" android:layout_below="@+id/DatePicker01" />

	<Button android:id="@+id/changecancel" android:text="@string/cancel"
		android:width="150dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="right"
		android:visibility="visible" android:layout_marginRight="7dip"
		android:layout_below="@+id/DatePicker01" android:layout_toRightOf="@+id/changeok" />
</RelativeLayout>
